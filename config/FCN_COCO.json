{
    "name": "FCN_COCO",
    "n_gpu": 1,
    "use_synch_bn": false,

    "arch": {
        "type": "FCN8",
        "args": {
            "pretrained": true,
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "COCO",
        "args":{
            "data_dir": "/data/active_testing/active_testing_seg/datasets/coco10k",
            "batch_size": 8,
            "base_size": 400,
            "crop_size": 380,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train",
            "num_workers": 1
        }
    },

    "val_loader": {
        "type": "COCO",
        "args":{
            "data_dir": "/data/active_testing/active_testing_seg/datasets/coco10k",
            "batch_size": 8,
            "crop_size": 480,
            "val": true,
            "split": "test",
            "num_workers": 1
        }
    },
    
    "train_val_loader": {
        "type": "COCO",
        "args":{
            "data_dir": "/data/active_testing/active_testing_seg/datasets/coco10k",
            "batch_size": 8,
            "crop_size": 480,
            "val": true,
            "split": "train",
            "num_workers": 1
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 80,
        "save_dir": "saved/",
        "save_period": 10,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": false,
        "log_dir": "saved/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    },
    
    "save_feature": {
        "save_feature": true,
        "saved_path": "/data/active_testing/active_testing_seg/pytorch-segmentation/pro_data/UNet_COCO10k/val/"
    },

    "seed": {
        "seed": 11
    }
}
